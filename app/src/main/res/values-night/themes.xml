<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AttendanceManagementSystem" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_gray</item>
        <item name="colorOnPrimary">@color/blue_college</item>
        <!-- Secondary brand color. -->
        <item name="android:windowBackground">@color/blue_college</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_college</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="actionBarTheme">@style/Widget.AppCompat.Light.ActionBar</item>
        <item name="actionBarStyle">@style/LightActionBarTheme</item>
        <item name="color">@color/blue_college</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>
    <style name="LightActionBarTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="background">@color/blue_college</item>
        <item name="android:titleTextStyle">@style/LightActionBarTheme.TitleTextStyle</item>
        <item name="android:background">@color/blue_college</item>
    </style>
    <style name="LightActionBarTheme.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:titleTextColor">@color/white</item>
        <item name="titleTextColor">@color/white</item>
    </style>

</resources>