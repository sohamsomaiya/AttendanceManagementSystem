<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/CheckConnectionLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/connectionImage"
            android:layout_width="match_parent"
            android:foregroundGravity="center"
            android:layout_height="300dp"
            android:background="@drawable/nosignal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/connectionText"
            android:layout_marginBottom="-120dp"
            />
        <TextView
            android:id="@+id/connectionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black_gray"
            android:text="Check Connection !"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:background="?attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/CircleCardTeacher"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="35dp"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="?attr/colorOnPrimary"
            app:cardCornerRadius="100dp"
            app:layout_constraintStart_toStartOf="@id/layout"
            app:layout_constraintTop_toTopOf="@id/layout">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/genderGif"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:visibility="visible" />
            <!--            <pl.droidsonroids.gif.GifImageView-->
            <!--                android:id="@+id/femalegif"-->
            <!--                android:visibility="invisible"-->
            <!--                android:layout_width="90sp"-->
            <!--                android:layout_height="90sp"-->
            <!--                android:src="@drawable/female1" />-->
        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>
        <TextView
            android:id="@+id/UserNameText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toEndOf="@id/CircleCardTeacher"
            app:layout_constraintTop_toTopOf="@+id/layout"
            app:layout_constraintBottom_toBottomOf="@id/CircleCardTeacher"
            android:textColor="?attr/colorOnPrimary"
            />
        <TextView
            android:id="@+id/UserIdText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginStart="23dp"
            app:layout_constraintStart_toStartOf="@+id/UserNameText"
            app:layout_constraintTop_toBottomOf="@id/UserNameText"
            android:textColor="?attr/colorOnPrimary"
            />
        <ImageView
            android:id="@+id/rectangleCurve"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_12"
            android:layout_marginTop="112dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/CardTopLeft"
            android:layout_width="127dp"
            android:layout_height="150dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/card_bg"
            android:src="@drawable/rectangle_13"
            app:layout_constraintTop_toBottomOf="@id/UserIdText"
            app:layout_constraintStart_toStartOf="@id/rectangleCurve"
            android:layout_marginStart="25dp"
            android:elevation="@dimen/cardview_default_elevation"
            android:layout_marginTop="55dp"
            >
            <ImageView
                android:id="@+id/CardTopLeftImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:visibility="visible" />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/CardTopLeftText"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/CardTopLeft"
            app:layout_constraintTop_toBottomOf="@id/CardTopLeft"
            app:layout_constraintEnd_toEndOf="@id/CardTopLeft"

            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/CardTopRight"
            android:layout_width="127dp"
            android:layout_height="150dp"
            app:cardCornerRadius="25dp"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="@color/card_bg"
            android:background="@drawable/rectangle_13"
            app:layout_constraintTop_toBottomOf="@id/UserIdText"
            app:layout_constraintEnd_toEndOf="@id/rectangleCurve"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="55dp"
            >
            <ImageView
                android:id="@+id/CardTopRightImg"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:layout_height="100dp"
                android:visibility="visible"
                />

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/CardTopRightText"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/CardTopRight"
            app:layout_constraintTop_toBottomOf="@id/CardTopRight"
            app:layout_constraintEnd_toEndOf="@id/CardTopRight"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/CardBottomLeft"
            android:layout_width="127dp"
            android:layout_height="150dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/card_bg"
            android:src="@drawable/rectangle_13"
            android:elevation="@dimen/cardview_default_elevation"
            app:layout_constraintTop_toBottomOf="@id/CardTopLeftText"
            app:layout_constraintStart_toStartOf="@id/CardTopLeft"
            android:layout_marginTop="50dp"
            >
            <ImageView
                android:id="@+id/CardBottomLeftImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                />

        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/CardBottomLeftText"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@+id/CardBottomLeft"
            app:layout_constraintTop_toBottomOf="@id/CardBottomLeft"
            app:layout_constraintEnd_toEndOf="@id/CardBottomLeft"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/CardBottomRight"
            android:layout_width="127dp"
            android:layout_height="150dp"
            app:cardCornerRadius="25dp"
            app:cardBackgroundColor="@color/card_bg"
            android:background="@drawable/rectangle_13"
            app:layout_constraintTop_toBottomOf="@id/CardTopRightText"
            android:elevation="@dimen/cardview_default_elevation"
            app:layout_constraintEnd_toEndOf="@id/rectangleCurve"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="50dp"
            >
        <ImageView
            android:id="@+id/CardBottomRightImg"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            />
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/CardBottomRightText"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:fontFamily="serif"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:gravity="center"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/CardBottomRight"
            app:layout_constraintTop_toBottomOf="@id/CardBottomRight"
            app:layout_constraintEnd_toEndOf="@id/CardBottomRight"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/NavView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="?attr/colorOnPrimary"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/main_menu"
        />

</androidx.drawerlayout.widget.DrawerLayout>